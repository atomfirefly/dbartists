<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical"
  android:padding="10dip"
  android:layout_height="fill_parent">
  <RelativeLayout
    android:id="@+id/StationGroup1"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <ImageView
      android:id="@+id/StationDetailsIcon"
      android:scaleType="centerInside"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    </ImageView>
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/StationDetailsImage"
      android:background="#fff" android:layout_toRightOf="@id/StationDetailsIcon"></ImageView>
    <TextView
      android:id="@+id/StationMiscText"
      android:text="TextView01"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginLeft="5dip" android:layout_toRightOf="@id/StationDetailsImage">
    </TextView>
    <TextView
      android:id="@+id/StationTaglineText"
      android:text="TextView01"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content" android:layout_below="@id/StationMiscText" android:layout_toRightOf="@id/StationDetailsImage" android:layout_marginLeft="5dip">
    </TextView>
  </RelativeLayout>
  <LinearLayout
    android:id="@+id/LinearLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dip"
    android:orientation="vertical"
    android:layout_marginLeft="5dip">
  </LinearLayout>
  <ExpandableListView
    android:id="@+id/ExpandableListView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"></ExpandableListView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:background="@color/white">

	<TextView android:text="@string/msg_playlist_title"
		android:id="@+id/TextView01" android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="@color/black" android:layout_margin="5dip"
		android:background="@color/white"></TextView>

	<ListView android:id="@+id/ListView01" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1.0"
		android:divider="@drawable/green_white_gradient"
		android:dividerHeight="1dip" android:background="@color/white"></ListView>

	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/BottomLayout"
		android:orientation="horizontal" android:layout_alignParentBottom="true"
		android:layout_margin="10dp" android:color="@android:color/transparent">
		<TextView android:text="@string/msg_playlist_clear"
			android:id="@+id/PlaylistClear" android:padding="4dp"
			android:textColor="@color/button_text_selector" android:textSize="18sp"
			android:layout_width="wrap_content" android:background="@drawable/button_selector"
			android:layout_height="wrap_content" android:layout_centerInParent="true"></TextView>
	</RelativeLayout>
</LinearLayout>
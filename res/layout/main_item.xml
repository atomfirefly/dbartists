<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/selector">
	<TextView android:id="@+id/list_content" android:textColor="@color/black"
		android:textSize="24sp" android:gravity="center_vertical"
		android:text="sample" android:layout_margin="4dip" android:paddingLeft="8dip"
		android:layout_width="wrap_content" android:layout_height="48sp" />
	<LinearLayout android:id="@+id/list_inner"
		android:orientation="horizontal" android:gravity="center_vertical"
		android:layout_margin="4dip" android:layout_width="wrap_content"
		android:layout_height="48sp" android:layout_alignParentRight="true">
		<TextView android:id="@+id/list_count" android:textColor="@color/black"
			android:textSize="20sp" android:gravity="center_vertical"
			android:text="0" android:layout_width="wrap_content"
			android:layout_marginRight="4dip" android:layout_height="fill_parent"
			android:layout_alignParentRight="true" android:visibility="invisible" />
		<ImageView android:id="@+id/arrow" android:gravity="center_vertical"
			android:src="@drawable/arrow" android:layout_height="24dip"
			android:layout_width="24dip" android:layout_marginRight="8dip" />
	</LinearLayout>
</RelativeLayout>